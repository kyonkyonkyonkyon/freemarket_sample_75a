

= form_for @item do |f|
  = render 'layouts/error_messages', model: f.object
  
  #image-box
    #previews    
    = f.fields_for :images do |image|
      .js-file_group{"data-index" => "#{image.index}"}
        = image.file_field :image, class: 'js-file'
        %br/
        %span.js-remove 削除
        
  商品名[必須]#{f.text_field :name}
  %br/
  商品の説明[必須]#{f.text_field :item_explanation}
  %br/
  カテゴリー[必須]#{f.collection_select :category_id, Category.all, :id, :name, include_blank: "選択して下さい"}
  %br/
  ブランド#{f.text_field :brand_name}
  %br/
  商品の状態[必須]#{f.select :item_status, Item.item_statuses.keys, include_blank: "選択して下さい"}
  %br/
  配送料の負担[必須]#{f.select :delivery_fee, Item.delivery_fees.keys, include_blank: "選択して下さい"}
  %br/
  発送元の地域[必須]#{f.select :shipping_origin, Address.prefictures.keys, include_blank: "選択して下さい" }
  %br/
  発送元までの日数[必須]#{f.select :days_until_shipping, Item.days_until_shippings.keys, include_blank: "選択して下さい"}
  %br/
  販売価格[必須]#{f.number_field :exhibition_price, min:1}
  %br/
  = f.submit "出品する"



