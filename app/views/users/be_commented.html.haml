= render "top/header"
.item__body
  .item__body__title
    コメントされた商品一覧
  .item__body__lists
    - @be_commented.each do |comment|
      -if comment.item.auction_status == '売り切れ'
        .main__category__lists__list
          = link_to item_path(comment.item.id), data: {"turbolinks" => false} do
            %figure.list__img
              = image_tag comment.item.images.first.image.url
            .list__body
              %h3.name
                = comment.item.name
              .list__price
                %ul
                  %li
                    = comment.item.exhibition_price.to_s(:delimited)
                    円
                  %li
                    = icon('fa', 'star')
                    0
                %p (税込)
            .list__sold
              .list__sold__inner
                sold
      - else
        .main__category__lists__list
          = link_to item_path(comment.item.id), data: {"turbolinks" => false} do
            %figure.list__img
              = image_tag comment.item.images.first.image.url
            .list__body
              %h3.name
                = comment.item.name
              .list__price
                %ul
                  %li
                    = comment.item.exhibition_price.to_s(:delimited)
                    円
                  %li
                    = icon('fa', 'star')
                    0
= render "top/lower-photo"
= render "top/footer"
= render "top/btn"