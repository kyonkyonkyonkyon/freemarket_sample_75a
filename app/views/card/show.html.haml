= render "top/header"
- breadcrumb :card_show
= render "items/nav"
.user
  = render 'users/user_side'
  .card
    .card__body
      .card__body__title
        クレジット情報の確認/削除
      .card__body__main
        .card__body__main__title
          Your Credit Card
        .card__body__main__data
          = "**** **** **** " + @card_info.last4
        .card__body__main__data
          = @card_info.exp_month.to_s + "月 / " + @card_info.exp_year.to_s.slice(2,3) + "年"
        .card__body__main__brand
          = image_tag "credit_logo/#{@card_src}", alt: @card_info.brand
      .delete_btn
        = link_to card_path, method: :delete, class: "btn" do
          クレジット情報を削除する
= render "top/lower-photo"
= render "top/footer"
= render "top/btn"